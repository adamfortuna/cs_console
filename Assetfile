require 'rake-pipeline-web-filters'

output 'compiled'

input 'app/javascripts' do
  match '**/*.coffee' do
    coffee_script
  end

  match '**/*.js' do
    minispade
    concat 'cs_console.js'
    # uglify
  end
end

input 'app/stylesheets' do
  match '**/*.sass' do
    sass
  end

  match '**/*.css' do
    concat 'cs_console.css'
  end
end
